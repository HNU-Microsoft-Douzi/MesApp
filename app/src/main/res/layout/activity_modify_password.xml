<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_change_password"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/bg_updata_pw">
    <com.msw.mesapp.ui.background.FloatBackground
        android:id="@+id/float_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/title_layout" />

        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="40.0dip" android:layout_marginTop="40.0dip" android:layout_marginRight="40.0dip" android:layout_marginBottom="10.0dip">
            <TextView android:textSize="18.0sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:text="输入原密码" />

            <com.msw.mesapp.ui.widget.ClearEditText
                android:id="@+id/change_old"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/editstyle"
                android:inputType="textVisiblePassword"
                android:paddingLeft="5dp"
                android:textColorHint="@color/color3" >
            </com.msw.mesapp.ui.widget.ClearEditText>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="40.0dip" android:layout_marginRight="40.0dip" android:layout_marginBottom="10.0dip">
            <TextView android:textSize="18.0sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:text="输入新密码" />

            <com.msw.mesapp.ui.widget.ClearEditText
                android:id="@+id/change_new"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/editstyle"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textColorHint="@color/color3" />
        </LinearLayout>
        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginBottom="10.0dip">
            <TextView android:textSize="18.0sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:text="再次输入新密码" />

            <com.msw.mesapp.ui.widget.ClearEditText
                android:id="@+id/change_new2"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/editstyle"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textColorHint="@color/color3" />
        </LinearLayout>
        <Button
            android:id="@+id/change_bt_submit"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginTop="50.0dip"
            android:background="@drawable/buttonstyle"

            android:text="确认"
            android:textColor="@color/white"
            android:textSize="22.0sp" />

    </LinearLayout>
    </com.msw.mesapp.ui.background.FloatBackground>


    <ProgressBar android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleSmall" />
</RelativeLayout>