<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_password"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg_updata_pw">

    <com.msw.mesapp.ui.background.FloatBackground
        android:id="@+id/float_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="40.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3.0dip"
                    android:text="输入原密码"
                    android:textColor="@color/colorAccent"
                    android:textSize="18.0sp" />

                <com.msw.mesapp.ui.widget.ClearEditText
                    android:id="@+id/change_old"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/editstyle"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/color3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3.0dip"
                    android:text="输入新密码"
                    android:textColor="@color/colorAccent"
                    android:textSize="18.0sp" />

                <com.msw.mesapp.ui.widget.ClearEditText
                    android:id="@+id/change_new"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/editstyle"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/color3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3.0dip"
                    android:text="再次输入新密码"
                    android:textColor="@color/colorAccent"
                    android:textSize="18.0sp" />

                <com.msw.mesapp.ui.widget.ClearEditText
                    android:id="@+id/change_new2"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/editstyle"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/color3" />
            </LinearLayout>

            <Button
                android:id="@+id/change_bt_submit"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="50.0dip"
                android:background="@drawable/buttonstyle"
                android:text="确认"
                android:textColor="@color/blue"
                android:textSize="22.0sp" />

        </LinearLayout>
    </com.msw.mesapp.ui.background.FloatBackground>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible" />
</RelativeLayout>