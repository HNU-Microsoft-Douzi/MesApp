<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/login_bg">
    <com.msw.mesapp.ui.background.FloatBackground
        android:id="@+id/float_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/loginUser"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:id="@+id/imageView"
            android:background="@mipmap/logo"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#00ffffff"
        android:layout_below="@+id/loginUser"
        android:layout_alignParentStart="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">


                <com.msw.mesapp.ui.widget.ClearEditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/username"
                    android:drawableLeft="@mipmap/usernameico"
                    android:drawablePadding="10dp"
                    android:textSize="20sp"
                    android:background="@drawable/edit_login_bg"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#5566ff"/>

                <com.msw.mesapp.ui.widget.ClearEditText
                    android:password="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/password"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:drawableLeft="@mipmap/passwdico"
                    android:background="@drawable/edit_login_bg"
                    android:imeOptions="actionDone"
                    android:textColor="@color/white"
                    android:textColorHint="#885566ee"/>


        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wjmm"
        android:layout_below="@+id/login"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/text_wjmm"
            android:layout_marginRight="20dp"
            android:text="忘记密码？"
            android:textColor="#55600ee4"
            android:textSize="11dp"
            android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/wjmm">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/Login"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/skyblue"
                android:text="登  陆" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
    </com.msw.mesapp.ui.background.FloatBackground>

    <ProgressBar android:layout_gravity="center"
        android:id="@+id/progressbar"
        android:visibility="invisible"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleSmall" />
</RelativeLayout>

