<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_updata_pw">
    <com.msw.mesapp.ui.background.FloatBackground
        android:id="@+id/float_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/loginUser"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:id="@+id/imageView"
            android:background="@mipmap/logo"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#00ffffff"
        android:layout_below="@+id/loginUser"
        android:layout_alignParentStart="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
              ></View>
            <TableRow
               >
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/usernameico"/>
                <View
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_width="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#15ffffff"/>
                <com.msw.mesapp.ui.widget.ClearEditText
                    android:layout_width="300dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/username"
                    android:layout_marginLeft="8dp"
                    android:textSize="20sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:hint="请输入用户名"
                    android:textColorHint="#885566ee"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                ></View>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                ></View>
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
               ></View>
            <TableRow>
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/passwdico"/>
                <View
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_width="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#15ffffff"/>
                <com.msw.mesapp.ui.widget.ClearEditText
                    android:password="true"
                    android:layout_width="300dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/password"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:hint="请输入密码"
                    android:textColorHint="#885566ee"/>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                ></View>
        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wjmm"
        android:layout_below="@+id/login">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/text_wjmm"
            android:layout_marginRight="20dp"
            android:text="忘记密码？"
            android:textColor="#55600ee4"
            android:textSize="11dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/wjmm">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/Login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                android:text="登  陆" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
    </com.msw.mesapp.ui.background.FloatBackground>

    <ProgressBar android:layout_gravity="center"
        android:id="@+id/progressbar"
        android:visibility="invisible"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleSmall" />
</RelativeLayout>

