<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msw.mesapp.activity.home.equipment.InspectWorkerJudgeErrActivity">
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_corner"
            android:gravity="left|top"
            android:hint="不合格原因填写..."
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textStyle="italic" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
